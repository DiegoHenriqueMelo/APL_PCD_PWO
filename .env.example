# .env.example
# Copie este arquivo para .env e preencha com seus valores

# URL da API Backend
NEXT_PUBLIC_API_URL=http://localhost:3001

# URL do Frontend (usado para redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Ambiente de Execução
NODE_ENV=development

# Porta do Servidor (opcional - padrão: 3000)
# PORT=3000

# Secret para JWT (use apenas em desenvolvimento)
# Em produção, configure no backend
# JWT_SECRET=sua-secret-key-super-segura-aqui

# Analytics (opcional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Feature Flags (opcional)
# NEXT_PUBLIC_ENABLE_DARK_MODE=false
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
# NEXT_PUBLIC_ENABLE_CHAT=false
